def decimal_to_binary(decimal):
    binary = bin(decimal)[2:].zfill(8)
    return binary

def binary_to_hex(binary):
    hex_decimal = hex(int(binary, 2))[2:].upper()
    return hex_decimal

def main():
    decimal_input = int(input('請您輸入一個介於0到255的十進位數字: '))
    if decimal_input<0:
        print('您所輸入的數字超出範圍了')
    if decimal_input>255:
        print('您所輸入的數字超出範圍了')
    else:
        binary_output = decimal_to_binary(decimal_input)
        hex_output = binary_to_hex(binary_output)

        print('您所輸入的十進位數字', decimal_input, '的二進位表示為:', binary_output)
        print('您所輸入的十進位數字', decimal_input, '的十六進位表示為:', hex_output)

if __name__ == '__main__':
    main()
